<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F3F3F3"
    android:background="@drawable/figura_fragment_codigo_qr"
    tools:context=".reservarClaseFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/reservarUnaCitaTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reservar una clase"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/seleccionaLocalizacionTv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona un tipo de clase"
        android:textColor="#7E7E7E"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/reservarUnaCitaTv"/>

    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/boton_registrarse"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:id="@+id/textInputLayout"
        style="@style/changeBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:textColorHint="#961A1A"
        android:layout_marginEnd="30dp"
        app:hintTextAppearance="@style/estilosTIL"
        app:layout_constraintTop_toBottomOf="@+id/seleccionaLocalizacionTv"
        android:layout_marginBottom="20dp">


        <AutoCompleteTextView

            android:id="@+id/localizacionesACTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SalÃ³n"
            android:textColor="#961A1A"
            android:textColorHint="#961A1A"
            android:inputType="none"
            android:drawableEnd="@drawable/icono_salones">

        </AutoCompleteTextView>


    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        android:id="@+id/seleccionaFechaTv"
        android:layout_width="match_parent"
        android:textColor="#7E7E7E"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        android:layout_marginBottom="20dp"
        android:text="Selecciona la Fecha"
        android:textSize="20sp"/>



        <com.google.android.material.textfield.TextInputLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxStrokeWidth="0dp"
            app:hintTextAppearance="@style/estilosTIL"
            app:boxStrokeWidthFocused="0dp"
            android:id="@+id/seleccionaFechaTIL"
            android:background="@drawable/boton_registrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@id/seleccionaFechaTv"
            android:textColorHint="#961A1A"
            app:hintTextColor="#961A1A"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewClasesDisponibles">

            <EditText
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:backgroundTint="@color/white"
                android:id="@+id/FechaET"
                android:layout_width="match_parent"
                android:layout_height= "wrap_content"
                android:hint="Fecha"
                android:textColorHint="#961A1A"
                android:textColor="#961A1A"
                android:clickable="false"
                android:focusable="false"
                android:drawableEnd="@drawable/fecha_icono"
                />


        </com.google.android.material.textfield.TextInputLayout>



    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recyclerViewClasesDisponibles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/seleccionaFechaTIL"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>

