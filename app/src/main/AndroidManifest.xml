<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
package="app40grados">

<!-- Add interet permission -->
<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- Permiso para mandar notificaciones -->
<uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

<application
    android:name="com.actin.app40Grados.aplicacion40Grados"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.40grados"
    android:usesCleartextTraffic="true">

    <activity
        android:name="com.actin.app40Grados.Galeria"
        android:exported="false" />

    <activity android:name="com.actin.app40Grados.BorrarCuenta"
        android:exported="false"
        android:screenOrientation="portrait"/>
    <activity
        android:name="com.actin.app40Grados.NuestrasClases"
        android:exported="false"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.actin.app40Grados.Conocenos"
        android:exported="false"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.actin.app40Grados.actividadMapa"
        android:exported="false"
        android:screenOrientation="portrait" />

    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="@string/google_maps_key" />

    <activity
        android:name="com.actin.app40Grados.Ubicaciones"
        android:exported="false"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.actin.app40Grados.horarios"
        android:exported="false"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.actin.app40Grados.DescripcionSalones"
        android:exported="false"
        android:screenOrientation="portrait" />

    <receiver
        android:name="com.actin.app40Grados.Notificaciones"
        android:enabled="true" />

    <activity
        android:name="com.actin.app40Grados.PaquetesActivity"
        android:exported="false"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.actin.app40Grados.HomeGimnasio"
        android:exported="false"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.actin.app40Grados.SignUpActivity"
        android:exported="true"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.actin.app40Grados.LoginActivity"
        android:exported="true"
        android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
</application>

</manifest>



